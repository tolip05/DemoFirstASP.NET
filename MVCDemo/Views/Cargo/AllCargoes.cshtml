@model IEnumerable<MVCDemo.Models.CargoView>

@{
    ViewBag.Title = "Index";
}

<h2>Cargoes <i class="fas fa-truck-moving"></i></h2>

<div class="row">
    <div class="col-md-6">
        @Html.ActionLink("Create New", "Check")
    </div>
    
    <div class="col-md-6 text-right">
    @Html.ActionLink("Search Cargo", "SearchCargo")
    </div>
</div>

<table class="table table-bordered table-striped table-hover">
    <tr class="text-info">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerKilometer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ForLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CargoType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransportType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Forwarder)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background-color:lightslategray">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerKilometer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CargoType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransportType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Forwarder)
            </td>
            <td class="text-primary">
                @Html.ActionLink("GetCargo", "Details", new { id = item.Id })
            </td>

        </tr>
    }

</table>
